{
  "name": "antlr4-editor",
  "version": "1.0.51",
  "description": "An full editor front-end library that can support various editor platforms, all using Antlr4",
  "main": "index.js",
  "types": "index.d.ts",
  "bin": {
    "antlr4-editor": "cli/app.js"
  },
  "scripts": {
    "test": "mocha",
    "build-docs": "typedoc --theme markdown --mdHideSources --out docs --includes ./src",
    "build-tinyc-sample": "antlr4-tool -o ./samples/tinyc/parser samples/tinyc/Tinyc.g4",
    "build-scss": "webpack --config ./webpack.scss.config.js",
    "start-tinyc": "electron ./samples/tinyc/index.html",
    "clean": "rm -rf dist",
    "lint": "tslint -p . -c tslint.json 'src/**/*.ts'",
    "build": "webpack --config ./webpack.scss.config.js && tsc && cp -r src/cli/templates/*.ejs ./dist/cli/templates/"
  },
  "files": [
    "**/*",
    "LICENSE",
    "docs"
  ],
  "keywords": [
    "ANTLR4",
    "editor",
    "code-editor",
    "web-editor",
    "parser",
    "antlr4",
    "antlr4-editor",
    "antlr-editor",
    "helper",
    "es5",
    "es6",
    "language",
    "dsl",
    "typescript"
  ],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/mcchatman8009/antlr4-editor"
  },
  "author": {
    "name": "Marlon Chatman",
    "email": "mcchatman8009@gmail.com"
  },
  "dependencies": {
    "antlr4-helper": "^1.0.45",
    "antlr4-tool": "^1.0.19",
    "chalk": "^2.4.1",
    "codemirror": "^5.39.2",
    "commander": "^2.17.1",
    "ejs": "^2.6.1",
    "expressive-template": "^1.0.0",
    "lodash": "^4.17.10",
    "mkdir-recursive": "^0.4.0",
    "rxjs": "^6.2.2",
    "electron": "^2.0.7"
  },
  "devDependencies": {
    "@types/codemirror": "0.0.58",
    "@types/node": "^10.5.4",
    "chai": "^4.1.2",
    "css-loader": "^1.0.0",
    "mini-css-extract-plugin": "^0.4.1",
    "mocha": "^5.2.0",
    "node-sass": "^4.9.3",
    "sass-loader": "^7.1.0",
    "tslint": "^5.10.0",
    "typedoc": "^0.11.1",
    "typedoc-plugin-markdown": "^1.1.13",
    "typescript": "^2.9.2",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0"
  }
}
